<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:fitsSystemWindows="true">

    <!-- Full Screen GLSurface -->
    <com.example.edgeviewer.GLSurface
        android:id="@+id/glSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top HUD: Glass Blur Panel -->
    <LinearLayout
        android:id="@+id/hudTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/glass_bg"
        android:layout_margin="16dp"
        android:layout_gravity="top|start">

        <TextView
            android:id="@+id/tvFps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FPS: 0.0"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROC: 0 ms"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/hudBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <!-- RAW / EDGE Toggle -->
        <TextView
            android:id="@+id/btnMode"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="RAW"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:background="@drawable/btn_modern"
            android:layout_marginEnd="20dp" />

        <!-- Capture Button -->
        <TextView
            android:id="@+id/btnCapture"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="CAPTURE"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:background="@drawable/btn_primary" />
    </LinearLayout>

</FrameLayout>
